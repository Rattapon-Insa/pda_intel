# Environment variables for PDA Intel

# Firebase / Firestore
FIREBASE_PROJECT_ID=your-firebase-project-id
FIREBASE_CREDENTIALS_PATH=./credentials/firebase-key.json

# Google Cloud Platform
GCP_PROJECT_ID=your-gcp-project-id
GCS_BUCKET=pda-intel-storage
VERTEX_REGION=asia-southeast1

# Gemini API
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL_FLASH=gemini-2.5-flash-preview-09-2025
GEMINI_MODEL_PRO=gemini-2.5-pro

# Vertex AI Matching Engine (will be created later)
VERTEX_MATCHING_INDEX_ID=your-index-id
VERTEX_MATCHING_ENDPOINT_ID=your-endpoint-id

# Environment
ENV=development
DEBUG=true
LOG_LEVEL=DEBUG

# Tariff updates
TARIFF_UPDATE_EMAIL=admin@shippingagent.com
TARIFF_CHECK_INTERVAL_DAYS=7

# API timeouts (seconds)
FIRESTORE_TIMEOUT=10
GEMINI_TIMEOUT=30
VECTOR_DB_TIMEOUT=15
